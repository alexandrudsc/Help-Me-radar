<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="gps_checkbox"
        android:title="@string/pref_title_gps"
        android:summary="@string/pref_description_gps"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:key="headphones_checkbox"
        android:enabled="false"
        android:title="@string/pref_title_headphones"
        android:summary="@string/pref_description_headphones"
        android:defaultValue="false" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="name"
        android:title="@string/pref_title_name"
        android:defaultValue="@string/pref_default_name"
        android:selectAllOnFocus="true"
        android:inputType="textMultiLine"
        android:maxLength="@integer/max_chars_message" />

    <EditTextPreference
        android:key="message_text"
        android:title="@string/pref_title_message"
        android:defaultValue="@string/pref_default_message"
        android:selectAllOnFocus="true"
        android:inputType="textMultiLine"
        android:maxLength="@integer/max_chars_message" />



</PreferenceScreen>
